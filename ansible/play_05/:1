---
- name: basic environment configuration
  hosts: ios_devices
  gather_facts: no
  connection: network_cli
  tasks:

    - name: configure edge routers interfaces
      ios_l3_interfaces:
        - name: ethernet0/0
          description: WAN interface primary link
          ipv4: 
            - address: 10.0.0.2/24
      when: inventory_hostname == "edge_01"



  
